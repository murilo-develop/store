<div class="max-w-6xl">
  <div class="flex gap-6">
    <% if @product.image.attached?%>
      <div class="bg-white shadow-sm rounded-lg px-8 py-6 flex-shrink-0">
        <%= image_tag @product.image %>
      </div>
    <% end %>

    <div class="bg-white shadow-sm rounded-lg px-8 py-6 flex-1">
      <% cache @product do %>
        <h1 class="text-3xl font-bold text-gray-900 mb-8"><%= @product.name %></h1>
      <% end %>

      <%= render "inventory", product: @product %>

      <div class="prose prose-indigo mb-8">
        <%= @product.description %>
      </div>

      <div class="flex items-center gap-3">
        <%= link_to "Back", products_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md font-semibold text-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
        <% if authenticated? %>
          <%= link_to "Edit", edit_product_path(@product), class: "inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-semibold text-sm text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 bg-red-600 border border-transparent rounded-md font-semibold text-sm text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" %>
          <% end %>
      </div>
     
    </div>
  </div>
</div>
